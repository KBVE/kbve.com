---
//?         Machine Learning Banner Generator = PoC by h0lybyte
const { content } = Astro.props;
---
<div class="p-4">
	<div class="container grid grid-cols-12 mx-auto">
		<div class="rounded-r-3xl bg-no-repeat bg-cover col-span-full lg:col-span-4" style={{ backgroundImage: `url(${content.img})` }}></div>
		<div class="rounded-l-3xl bg-offset flex flex-col p-6 col-span-full row-span-full lg:col-span-8 lg:p-10">
			<div class="flex justify-start p-1 space-x-2">
				{content.tags.map((tags) =>	<a rel="noopener noreferrer" href={`https://kbve.com/t/${tags}`} class="inline-block text-2xl font-semibold sm:text-3xl"><span class="px-2 py-1 text-xs rounded-full bg-orange-500">#{tags}</span></a>)}
			</div>
			<h1 class="text-3xl font-semibold">{content.title}</h1>
			<p class="flex-1 pt-2">{content.description}</p>
			<a rel="noopener noreferrer" href="#" class="inline-flex items-center pt-2 pb-6 space-x-2 text-sm ">
				<span>Read more</span>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
					<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
				</svg>
			</a>
			<div class="flex items-center justify-between pt-2">
				<div class="flex space-x-2">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 dark:text-gray-400">
						<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
					</svg>
					<span class="self-center text-sm">by {content.author}</span>
				</div>
				<span class="text-xs">ML Banner from KBVE</span>
			</div>
		</div>
	</div>
</div>