---
//? {Astro}->[Namespace]=[N]
//? [IMPORTS]
    import Theme from "@n/Theme/Theme.astro";
    import Banner from "@c/Element/Banner/Banner.astro";
    import Controller from "./Controller/Controller.astro";
    import Ads from "@c/Element/Ads/Ads.astro";
//? [DATA]
    const {
        ns = "null",
        namespace = "null",
        element = "astro",
        title = "",
        description = "",
        id = "",
        template = "",
        data = "",
        className = "",
    } = Astro.props;
    let _ns = ns;
//? [SAFETY]
    if(ns == "c"){ _ns = "controller"}
    if(ns === "null"){ _ns = namespace}
---
{(_ns == "theme") && <Theme title={title} description={description} template={template}><slot /></Theme>}
{(_ns == "banner") && <Banner bannerConcept={template} id={id} data={data} />}
{(_ns == "controller") && <Controller id={id} template={template} data={data} className={className} element={element} />}
{(_ns == "ads") && <Ads template={template} data={data} id={id} className={className} />}