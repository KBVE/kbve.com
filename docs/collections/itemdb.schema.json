{
  "$ref": "#/definitions/itemdb",
  "definitions": {
    "itemdb": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "key": {
          "type": "integer",
          "minimum": 0
        },
        "ref": {
          "type": "string",
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
          "errorMessage": {
            "pattern": "Invalid ULID"
          }
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "category": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1074003967
        },
        "description": {
          "type": "string"
        },
        "img": {
          "type": "string"
        },
        "pixelDensity": {
          "type": "integer",
          "minimum": 8,
          "maximum": 512
        },
        "sortingLayer": {
          "type": "string",
          "default": "Default"
        },
        "sortingOrder": {
          "type": "integer",
          "default": 0
        },
        "bonuses": {
          "type": "object",
          "properties": {
            "armor": {
              "type": "number"
            },
            "intelligence": {
              "type": "number"
            },
            "health": {
              "type": "number"
            },
            "mana": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "durability": {
          "type": "number"
        },
        "weight": {
          "type": "number"
        },
        "equipped": {
          "type": "boolean"
        },
        "consumable": {
          "type": "boolean"
        },
        "effects": {
          "type": "string"
        },
        "stackable": {
          "type": "boolean"
        },
        "rarity": {
          "type": "string"
        },
        "levelRequirement": {
          "type": "number"
        },
        "price": {
          "type": "number"
        },
        "cooldown": {
          "type": "number"
        },
        "action": {
          "type": "string"
        },
        "craftingMaterials": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "credits": {
          "type": "string"
        },
        "scripts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "guid": {
                "type": "string",
                "pattern": "^[a-f0-9]{32}$"
              },
              "vars": {
                "type": "object",
                "additionalProperties": {
                  "type": [
                    "string",
                    "number",
                    "boolean"
                  ]
                }
              }
            },
            "required": [
              "guid"
            ],
            "additionalProperties": false
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "key",
        "ref",
        "name",
        "type",
        "pixelDensity"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}