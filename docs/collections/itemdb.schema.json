{
  "$ref": "#/definitions/itemdb",
  "definitions": {
    "itemdb": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "key": {
          "type": "integer",
          "minimum": 0
        },
        "ref": {
          "type": "string",
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
          "errorMessage": {
            "pattern": "Invalid ULID"
          }
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "category": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1074003967
        },
        "description": {
          "type": "string"
        },
        "img": {
          "type": "string"
        },
        "pixelDensity": {
          "type": "integer",
          "minimum": 8,
          "maximum": 512
        },
        "sortingLayer": {
          "type": "string",
          "default": "Default"
        },
        "sortingOrder": {
          "type": "integer",
          "default": 0
        },
        "bonuses": {
          "type": "object",
          "properties": {
            "armor": {
              "type": "number"
            },
            "intelligence": {
              "type": "number"
            },
            "health": {
              "type": "number"
            },
            "mana": {
              "type": "number"
            },
            "energy": {
              "type": "number"
            },
            "strength": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "durability": {
          "type": "number"
        },
        "weight": {
          "type": "number"
        },
        "equipped": {
          "type": "boolean"
        },
        "consumable": {
          "type": "boolean"
        },
        "effects": {
          "type": "string"
        },
        "stackable": {
          "type": "boolean"
        },
        "rarity": {
          "type": "string"
        },
        "levelRequirement": {
          "type": "number"
        },
        "price": {
          "type": "number"
        },
        "cooldown": {
          "type": "number"
        },
        "action": {
          "type": "string"
        },
        "craftingMaterials": {
          "type": "object",
          "properties": {
            "ingredients": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "ref": {
                        "type": "string",
                        "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
                      },
                      "amount": {
                        "type": "integer",
                        "exclusiveMinimum": 0
                      }
                    },
                    "required": [
                      "ref"
                    ],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "tools": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "ref": {
                        "type": "string",
                        "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
                      }
                    },
                    "required": [
                      "ref"
                    ],
                    "additionalProperties": false
                  }
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "deployable": {
          "type": "object",
          "properties": {
            "size": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": [
                {
                  "type": "integer",
                  "minimum": 1
                },
                {
                  "type": "integer",
                  "minimum": 1
                }
              ],
              "default": [
                1,
                1
              ]
            },
            "pivot": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": [
                {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              ],
              "default": [
                0.5,
                0.5
              ]
            },
            "overridePrefab": {
              "type": "string"
            },
            "scripts": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "scaleMultiplier": {
              "type": "number",
              "exclusiveMinimum": 0,
              "default": 1
            },
            "gridSnap": {
              "type": "boolean",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "credits": {
          "type": "string"
        },
        "scripts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "guid": {
                "type": "string",
                "pattern": "^[a-f0-9]{32}$"
              },
              "vars": {
                "type": "object",
                "additionalProperties": {
                  "type": [
                    "string",
                    "number",
                    "boolean"
                  ]
                }
              }
            },
            "required": [
              "guid"
            ],
            "additionalProperties": false
          }
        },
        "steamMarketUrl": {
          "type": "string"
        },
        "exchangeUrl": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "key",
        "ref",
        "name",
        "type",
        "pixelDensity"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}